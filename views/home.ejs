    <body>

        <!-- Navigation Bar -->
        <ul class="navbar" id="navbar">
            <a style="font-size:15px;" class="icon" onclick="ExpandMobileMenu()">&#9776;</a>
            <li class="active" ><a href="/home">Lifeclock</a></li>
            <li><a href="/social">Social</a></li>
